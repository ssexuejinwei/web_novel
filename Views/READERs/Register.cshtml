
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="login-bg">
<head>
    <title>Detail Admin - Sign up</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- bootstrap -->
    <link href="~/登录，注册/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/登录，注册/css/bootstrap/bootstrap-responsive.css" rel="stylesheet" />
    <link href="~/登录，注册/css/bootstrap/bootstrap-overrides.css" type="text/css" rel="stylesheet" />

    <!-- global styles -->
    <link rel="stylesheet" type="text/css" href="~/登录，注册/css/layout.css" />
    <link rel="stylesheet" type="text/css" href="~/登录，注册/css/elements.css" />
    <link rel="stylesheet" type="text/css" href="~/登录，注册/css/icons.css" />

    <!-- libraries -->
    <link rel="stylesheet" type="text/css" href="~/登录，注册/css/lib/font-awesome.css" />

    <!-- this page specific styles -->
    <link rel="stylesheet" href="~/登录，注册/css/compiled/signup.css" type="text/css" media="screen" />

    
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body>
    <form action="~/Readers/Register" method="post">
        @Html.AntiForgeryToken()
        <div class="tab-content">
            <div id="tab_1_1" class="tab-pane active">

                <div class="header">
                    <a href="index.html"></a>
                </div>
                <div class="row-fluid login-wrapper">
                    <div class="box">
                        <div class="content-wrap">
                            <h6>注册账户</h6>
                            <input class="span12" name="EMAI" type="text" placeholder="邮箱" />
                            <input class="span12" name="READERNAME" type="text" placeholder="昵称" />
                            <input class="span12" name="PASSWORD1" type="password" placeholder="密码" />
                            <input class="span12" name="PASSWORD2" type="password" placeholder="确认密码" />
                            <div class="action">
                                <input type="submit" value="点击注册" class="btn-glow primary login" />
                                @*<a class="btn-glow primary signup" href="../首页/index.html">点击注册</a>*@
                            </div>
                        </div>
                    </div>

                    <div class="span4 already">
                        <p>已经拥有账户？</p>
                        @Html.ActionLink("登录","_login","login")
                    </div>
                </div>

            </div>

            <div id="tab_1_2" class="tab-pane">

                <div class="header">
                    <a href="index.html"></a>
                </div>
                <div class="row-fluid login-wrapper">
                    <div class="box">
                        <div class="content-wrap">
                            <h6>作者注册</h6>
                            <input class="span12" type="password" placeholder="邮箱" />
                            <input class="span12" type="text" placeholder="昵称" />
                            <input class="span12" type="password" placeholder="密码" />
                            <input class="span12" type="password" placeholder="确认密码" />
                            <div class="action">
                                <a class="btn-glow primary signup" href="../首页/index.html">点击注册</a>
                            </div>
                        </div>
                    </div>

                    <div class="span4 already">
                        <p>已经拥有账户？</p>
                        <a href="登录.html">登录</a>
                    </div>
                </div>

            </div>


        </div>

    </form>


        <!-- scripts -->
        <script src="~/登录，注册/js/jquery-latest.js"></script>
        <script src="~/登录，注册/js/bootstrap.min.js"></script>
        <script src="~/登录，注册/js/theme.js"></script>

</body>
</html>
