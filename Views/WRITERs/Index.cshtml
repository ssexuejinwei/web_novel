@model IEnumerable<WebApplication1.Models.BOOK>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>我的作品</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />

    <link href="~/个人主页-作者/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/个人主页-作者css/bootstrap-responsive.min.css" rel="stylesheet" />

   
    <link href="~/个人主页-作者/css/font-awesome.css" rel="stylesheet" />

    <link href="~/个人主页-作者/css/adminia.css" rel="stylesheet" />
    <link href="~/个人主页-作者/css/adminia-responsive.css" rel="stylesheet" />

    <link href="~/个人主页-作者/css/pages/dashboard.css" rel="stylesheet" />

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>

<body>
   
    <div class="navbar navbar-fixed-top">

        <div class="navbar-inner">

            <div class="container">

                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <a class="brand" href="/Home/homepage">小说网站</a>@*未修改,跳转至首页*@


                <div class="nav-collapse">

                    <ul class="nav pull-right">
                        <li>
                        </li>

                        <li class="divider-vertical"></li>

                    </ul>

                </div> <!-- /nav-collapse -->

            </div> <!-- /container -->

        </div> <!-- /navbar-inner -->

    </div> <!-- /navbar -->




    <div id="content">

        <div class="container">

            <div class="row">

                <div class="span3">

                    <div class="account-container">

                        <div class="account-avatar">
                            <img src="~/个人主页-作者/img/head.png" alt="" class="thumbnail" />
                        </div> <!-- /account-avatar -->

                        <div class="account-details">
                            @{
                                var level = Convert.ToInt32(Html.ViewBag.level);
                                var fan = Convert.ToInt32(Html.ViewBag.fans);
                                var monthticket = Convert.ToInt32(Html.ViewBag.month);
                                <span class="account-name">@Html.ViewBag.name</span>
                                <span class="account-role">等级:@level</span>

                                <span class="account-actions">
                                    <a href="javascript:;">粉丝数:@fan</a> |
                                    <a href="javascript:;">月票数:@monthticket</a>
                                </span>

                            } 

                        </div> <!-- /account-details -->

                    </div> <!-- /account-container -->

                    <hr />

                    <ul id="main-nav" class="nav nav-tabs nav-stacked">

                        <li class="active">
                            <a href="~/WRITERs">
                                <i class="icon-home"></i>
                                我的作品
                            </a>
                        </li>
                        <li>
                            <a href="./faq.html">@*未修改*@
                                <i class="icon-pushpin"></i>
                                上传新内容
                            </a>
                        </li>

                        <li>
                            <a href="~/WRITERs/Account">
                                <i class="icon-user"></i>
                                修改个人信息
                            </a>
                        </li>
                        <li>
                            @{ 
                                if (Request.Cookies["_userid"] != null) {
                                    HttpCookie hc = Request.Cookies["_userid"];
                                    hc.Expires = DateTime.Now.AddDays(-1);
                                    Response.AppendCookie(hc);
                                }
                            }
                            <a href="~/Login/_login">@*未修改,跳转至登录页面*@
                                <i class="icon-lock"></i>
                                注销
                            </a>
                        </li>

                    </ul>
                    <hr />
                    <div class="sidebar-extra">
                        <p>中国互联网违法和不良信息举报中心在此提醒，举报中心工作人员从来不会使用个人手机与网民联系，不会以任何理由对您手机进行停机操作，更不会要求您转账汇款缴纳保证金、手续费。</p>
                    </div> <!-- .sidebar-extra -->
                    <br />

                </div> <!-- /span3 -->
                <div class="span9">
                    <h1 class="page-title">
                        <i class="icon-home"></i>
                        我的作品
                    </h1>

                    <!-- gallery wrapper -->
                    <div class="gallery-wrapper">
                        <div class="row gallery-row">
                            <!-- single image -->
@foreach (var item in Model)
{
    <div class="span3 img-container">
        <div class="img-box">
            <span class="icon edit">
                <i class="gallery-edit"></i>
            </span>
            <span class="icon trash">
                <i class="gallery-trash"></i>
            </span>
            <img src="~/个人主页-作者/img/gallery1.jpg" />
            <p class="title">
                <a href="../书籍详情/详情页.html">@Html.DisplayFor(modelItem => item.BOOKNAME)</a>@*超链接未修改，跳转到书籍详情*@
            </p>
        </div>
    </div>
}
                        </div> <!-- /span9 -->
                    </div> <!-- /row -->

                </div> <!-- /container -->

            </div> <!-- /content -->
        </div>
    </div>




    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/个人主页-作者/js/jquery-1.7.2.min.js"></script>
    <script src="~/个人主页-作者/js/excanvas.min.js"></script>
    <script src="~/个人主页-作者/js/jquery.flot.js"></script>
    <script src="~/个人主页-作者/js/jquery.flot.pie.js"></script>
    <script src="~/个人主页-作者/js/jquery.flot.orderBars.js"></script>
    <script src="~/个人主页-作者/js/jquery.flot.resize.js"></script>


    <script src="~/个人主页-作者/js/bootstrap.js"></script>
    <script src="~/个人主页-作者/js/charts/bar.js"></script>

</body>
</html>

