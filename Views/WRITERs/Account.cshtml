@model IEnumerable<WebApplication1.Models.WRITER>
    @*未修改*@

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>我的账户</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />

    <link href="~/个人主页-作者/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/个人主页-作者/css/bootstrap-responsive.min.css" rel="stylesheet" />

    
    <link href="~/个人主页-作者/css/font-awesome.css" rel="stylesheet" />

    <link href="~/个人主页-作者/css/adminia.css" rel="stylesheet" />
    <link href="~/个人主页-作者/css/adminia-responsive.css" rel="stylesheet" />


    <link href="~/个人主页-作者/css/pages/plans.css" rel="stylesheet" />


    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
@{ 
    //string w_id = Request.Cookies["_userid"].Value;
    string w_id = "00002221";
    if (w_id != null)
    {
        WebApplication1.Models.NovelWeb db = new WebApplication1.Models.NovelWeb();
        WebApplication1.Models.WRITER wRITER = db.WRITER.Find(w_id);
        ViewBag.name = wRITER.WRITERNAME;
        ViewBag.level = wRITER.WRITERLEVEL;
        ViewBag.fans = wRITER.NUMFANS;
        ViewBag.month = wRITER.MONTHTICKET;
        ViewBag.sex = wRITER.SEX;
        ViewBag.email = wRITER.EMAI;
        ViewBag.password = wRITER.PASSWORD;
        
    }
   
}

<body>
    <form action="~/WRITERs/Account" method="post">
        @Html.AntiForgeryToken()
        <div class="navbar navbar-fixed-top">

            <div class="navbar-inner">

                <div class="container">

                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>

                    <a class="brand" href="../首页/index.html">小说网站</a>@*未修改,跳转至首页*@

                    <div class="nav-collapse">

                        <ul class="nav pull-right">
                            <li>
                            </li>

                            <li class="divider-vertical"></li>
                        </ul>

                    </div> <!-- /nav-collapse -->

                </div> <!-- /container -->

            </div> <!-- /navbar-inner -->

        </div> <!-- /navbar -->




        <div id="content">

            <div class="container">

                <div class="row">

                    <div class="span3">

                        <div class="account-container">

                            <div class="account-avatar">
                                <img src="~/个人主页-作者/img/head.png" alt="" class="thumbnail" />
                            </div> <!-- /account-avatar -->

                            <div class="account-details">

                                @{
                                    var level = Convert.ToInt32(Html.ViewBag.level);
                                    var fan = Convert.ToInt32(Html.ViewBag.fans);
                                    var monthticket = Convert.ToInt32(Html.ViewBag.month);
                                    <span class="account-name">@Html.ViewBag.name</span>
                                    <span class="account-role">等级:@level</span>

                                    <span class="account-actions">
                                        <a href="javascript:;">粉丝数:@fan</a> |
                                        <a href="javascript:;">月票数:@monthticket</a>
                                    </span>

                                }
                            </div> <!-- /account-details -->

                        </div> <!-- /account-container -->

                        <hr />

                        <ul id="main-nav" class="nav nav-tabs nav-stacked">

                            <li>
                                <a href="~/WRITERs">
                                    <i class="icon-home"></i>
                                    我的作品
                                </a>
                            </li>
                            <li>
                                <a href="./faq.html">
                                    @*未修改*@
                                    <i class="icon-pushpin"></i>
                                    上传新内容
                                </a>
                            </li>
                            <li class="active">
                                <a href="~/WRITERs/Account">
                                    <i class="icon-user"></i>
                                    修改个人信息
                                </a>
                            </li>

                            <li>
                                <a href="../登录，注册/登录.html">
                                    @*未修改,跳转至登录页面*@
                                    <i class="icon-lock"></i>
                                    注销
                                </a>
                            </li>

                        </ul>



                        <hr />

                        <div class="sidebar-extra">
                            <p>中国互联网违法和不良信息举报中心在此提醒，举报中心工作人员从来不会使用个人手机与网民联系，不会以任何理由对您手机进行停机操作，更不会要求您转账汇款缴纳保证金、手续费。</p>
                        </div> <!-- .sidebar-extra -->

                        <br />

                    </div> <!-- /span3 -->


                    <div class="span9">

                        <h1 class="page-title">
                            <i class="icon-th-large"></i>
                            我的账户
                        </h1>
                        <div class="row">

                            <div class="span9">

                                <div class="widget">

                                    <div class="widget-header">
                                        <h3>基本信息</h3>
                                    </div> <!-- /widget-header -->

                                    <div class="widget-content">
                                        <div class="tabbable">
                                            <br />

                                            <div class="tab-content">
                                                <div class="tab-pane active" id="1">
                                                    <form id="edit-profile" class="form-horizontal" />
                                                    <fieldset>

                                                        <div class="control-group">
                                                            <label class="control-label" for="username">用户名</label>
                                                            <div class="controls">
                                                                <input type="text" class="input-medium disabled" id="username" value="@Html.ViewBag.name" disabled="" />
                                                                <p class="help-block">你的用户名不可再更改</p>
                                                            </div> <!-- /controls -->
                                                        </div> <!-- /control-group -->

                                                        <div class="control-group">
                                                            <label class="control-label" for="firstname">性别</label>
                                                            <div class="controls">
                                                                <input type="text" name="sex" class="input-medium" id="firstname" value="@Html.ViewBag.sex" />
                                                            </div> <!-- /controls -->
                                                        </div> <!-- /control-group -->

                                                        <div class="control-group">
                                                            <label class="control-label" for="email">邮箱</label>
                                                            <div class="controls">
                                                                <input type="text" name="email" class="input-large" id="email" value="@Html.ViewBag.email" />
                                                            </div> <!-- /controls -->
                                                        </div> <!-- /control-group -->

                                                        <div class="control-group">
                                                            <label class="control-label" for="password1">密码</label>
                                                            <div class="controls">
                                                                <input type="password" name="password" class="input-medium" id="password1" value="@Html.ViewBag.password" />
                                                            </div> <!-- /controls -->
                                                        </div> <!-- /control-group -->

                                                        <br />
                                                        <div class="form-actions">
                                                            <button type="submit" class="btn btn-primary">保存</button>

                                                        </div> <!-- /form-actions -->
                                                    </fieldset>

                                                </div>
                                                <!--	<div class="tab-pane" id="2">
                                                                                </div>
                                                -->
                                            </div>
                                        </div>
                                    </div> <!-- /widget-content -->

                                </div> <!-- /widget -->

                            </div> <!-- /span9 -->

                        </div> <!-- /row -->

                    </div> <!-- /span9 -->


                </div> <!-- /row -->

            </div> <!-- /container -->

        </div> <!-- /content -->
        <!-- Le javascript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->

        </form>
        <script src="~/个人主页-作者/js/bootstrap.js"></script>

</body>
</html>

