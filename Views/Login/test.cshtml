
@model WebApplication1.Models.Login
@{
    Layout = null;
}


<!DOCTYPE html>



<html class="login-bg">
<head>
    <title>Detail Admin - Sign in</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- bootstrap -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-overrides.css" type="text/css" rel="stylesheet" />

    <!-- global styles -->
    <link rel="stylesheet" type="text/css" href="~/Content/layout.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/elements.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/icons.css" />

    <!-- libraries -->
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.css" />

    <!-- this page specific styles -->
    <link rel="stylesheet" href="~/Content/signin.css" type="text/css" media="screen" />

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>


<body style="background-color: #FEDFE1">
    <!-- background switcher -->
    <form action="~/Login/_login" method="post">
        @Html.AntiForgeryToken()
        <div class="row-fluid login-wrapper">
            <a href="index.html"></a>

            <div class="span4 box">
                <div class="content-wrap">
                    <h6>登录</h6>

                    <input class="span12" name="id" type="text" placeholder="账号"/>

                    <input class="span12" name="Password" type="password" placeholder="密码"/>

                    <div class="remember">
                        <input id="remember-me" type="checkbox" />

                        <label for="remember-me">记住我</label>
                    </div>
                </div>
            </div>
            <div class="btn-glow primary login">
                <input type="submit" value="登录" class="btn-glow primary login"/>
            </div>

            <div class="span4 no-account">
                <p>没有账户？</p>

                @Html.RouteLink("读者注册", new { Controller = "Readers", Action = "Register",id=Model.ID });
                @Html.RouteLink("作者注册", new { Controller = "Writers", Action = "Register" });
            </div>
        </div>

    </form>

        <!-- scripts -->
        <script src="~/Scripts/jquery-latest.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/theme.js"></script>

        <!-- pre load bg imgs -->
        <script type="text/javascript">
            $(function () {
                // bg switcher
                var $btns = $(".bg-switch .bg");
                $btns.click(function (e) {
                    e.preventDefault();
                    $btns.removeClass("active");
                    $(this).addClass("active");
                    var bg = $(this).data("img");

                    $("html".css("background-image", "url('img/bgs/" + bg + "')");
                });

            });
        </script>

</body>
</html>
